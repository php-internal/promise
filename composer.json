    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.10",
        "ta-tikoma/phpunit-architecture-test": "^0.8.5"
    },
    "replace": {
        "react/promise": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "React\\Promise\\": "src/"
        },
        "files": [
            "src/functions_include.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "React\\Promise\\": [
                "tests/",
                "tests/fixtures/"
            ]
        }
    },
    "config": {
        "audit": {
            "abandoned": "report"
        },
        "sort-packages": true
    }
}
